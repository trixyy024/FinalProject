<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.Book_now"
    android:background="@color/offwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Book Now"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="8dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/customerNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Customer Name"
                android:padding="8dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/green"
                />

            <EditText
                android:id="@+id/petNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Pet Name"
                android:padding="8dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/petBreedEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Pet Breed"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Address"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Type of service"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/green"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:text="Products"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/datePickerEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Date"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/green"/>

            <EditText
                android:id="@+id/timePickerEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Time"
                android:padding="8dp"
                android:focusable="false"
                android:clickable="true"
                android:backgroundTint="@color/green"/>

            <LinearLayout
                android:id="@+id/drawable_container"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Bill"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="100dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gcashlogo"
                    android:padding="4dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cashh"
                    android:padding="4dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="100dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/green"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="100dp"
                    android:layout_height="58dp"
                    android:backgroundTint="@color/green"
                    android:padding="5dp"
                    android:text="Submit"
                    android:textSize="18sp"
                    app:cornerRadius="10dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
